{
  "name": "bunman",
  "version": "0.1.0",
  "description": "Bun-native process manager powered by systemd",
  "type": "module",
  "bin": {
    "bunman": "src/cli/index.ts"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outfile=dist/bunman --target=bun --minify",
    "build:standalone": "bun build src/cli/index.ts --outfile=dist/bunman --target=bun --compile",
    "lint": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "bun",
    "process-manager",
    "systemd",
    "pm2",
    "linux",
    "daemon"
  ],
  "author": "Mateo Cerquetella",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "os": [
    "linux"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}